# ============================================
# DeepSeek API (必需)
# 用于 LLM 对话
# 获取地址: https://platform.deepseek.com/
# ============================================
DEEPSEEK_API_KEY=sk-your-deepseek-api-key-here
DEEPSEEK_API_BASE=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_CONTEXT_WINDOW=64000

DEFAULT_LLM_PROVIDER=deepseek
DEFAULT_LLM_MODEL=

OPENAI_API_KEY=
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
OPENAI_CONTEXT_WINDOW=128000

QWEN_API_KEY=
QWEN_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen-plus
QWEN_CONTEXT_WINDOW=32000

# ============================================
# Ollama 本地模型 (可选)
# 用于本地运行 LLM / Embedding
# 安装: https://ollama.com/
# ============================================
OLLAMA_API_KEY=ollama
OLLAMA_API_BASE=http://localhost:11434/v1
OLLAMA_MODEL=
OLLAMA_CONTEXT_WINDOW=8192

LLM_CONTEXT_RATIO=0.7
LLM_HISTORY_MIN_MESSAGES=2
LLM_HISTORY_TOKEN_FLOOR=256
LLM_DEFAULT_CONTEXT_WINDOW=32768

# ============================================
# SiliconFlow API (必需)
# 用于文本向量化 (Embedding)
# 获取地址: https://siliconflow.cn/
# ============================================
SILICONFLOW_API_KEY=sk-your-siliconflow-api-key-here
SILICONFLOW_API_BASE=https://api.siliconflow.cn/v1
EMBEDDING_MODEL=BAAI/bge-m3

# Embedding 提供商配置
# 支持: siliconflow / openai / ollama
EMBEDDING_PROVIDER=siliconflow
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OLLAMA_EMBEDDING_MODEL=

# ============================================
# 应用配置 (可选)
# ============================================
LOG_LEVEL=INFO

# 管理员邮箱 (该邮箱注册时自动获得管理员权限，留空则不自动分配管理员)
ADMIN_EMAIL=
AUTH_LOCK_MAX_ATTEMPTS=5
AUTH_LOCK_WINDOW_MINUTES=15
ENABLE_CODE_NODE=false
ENABLE_HTTP_NODE=false
ENABLE_OPENAI_API=false
ENABLE_PUBLIC_EMBED=false
HTTP_NODE_ALLOW_DOMAINS=

# ============================================
# 以下配置在 config.py 中未定义
# 如需使用，请在 config.py 中添加对应字段
# ============================================
# HOST=0.0.0.0
# PORT=8000
# DEBUG=true
# CORS_ORIGINS=http://localhost:5173
# CHROMA_PERSIST_DIRECTORY=./data/chromadb
